{
  "rootDir": "src",
  "testMatch": ["**/*.test.js"],
  "coverageDirectory": "<rootDir>/../.coverage",
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/*.story.js",
    "!**/*.test.js"
  ],
  "coverageReporters": ["lcov", "text", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 8,
      "functions": 16,
      "lines": 20,
      "statements": 14
    }
  },
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "moduleNameMapper": {
    "\\.(css|less|s(c|a)ss)$": "<rootDir>/../__mocks__/style.js"
  }
}